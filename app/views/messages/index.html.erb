<div class="new-post-btn">
	<% if user_signed_in? %>
		<div class="lower-new-post-btn">
			<p><%= link_to "New Post", new_message_path, class: "btn-custom" %></p>
		</div>
	<% else %>
		<h2 class="message-title">Login to create a new post!</h2>
	<% end %>
</div>
<% @messages.each do |message| %>
	<div class="col-md-4">
		<div class="message">
			<h2 class="message-title"><%= message.title %></h2>
			<%= link_to "View Message", message_path(message), class: "btn-custom" %>
		</div>
	</div>
<% end %>
